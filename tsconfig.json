{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
		"moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
		"paths": {
			"*": ["./*"]
		},
		"types": ["node"],
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["**/*"]
}